@model Pharmasuit.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1>@Model.Name</h1>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Price:</strong> @Model.Price.ToString("C")</p>
<p><strong>Stock Quantity:</strong> @Model.Stock</p>

<form method="post" action="/Order/CreateOrder">
    <div>
        <label for="quantity">Quantity:</label>
        <input type="number" name="quantities" value="1" min="1" max="@Model.Stock" />
        <input type="hidden" name="productIds" value="@Model.Id" />
    </div>
    <button type="submit">Add to Cart</button>
</form>
